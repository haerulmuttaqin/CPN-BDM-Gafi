<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="5dp"
    app:strokeWidth="0.5dp"
    app:strokeColor="@color/gray_050">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/reasonLabel"
            android:text="Tagging"
            android:fontFamily="@font/bold"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:id="@+id/box1"
            android:layout_below="@id/reasonLabel"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
            
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="7dp"
                app:cardBackgroundColor="@color/blue_200">
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    
                    <TextView
                        android:id="@+id/blue1"
                        android:text="37.000"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/blue2"
                        android:layout_below="@id/blue1"
                        android:layout_marginTop="3dp"
                        android:text="[76%]"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/blue3"
                        android:layout_below="@id/blue2"
                        android:layout_marginTop="3dp"
                        android:text="+6%"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_below="@id/blue2"
                        android:layout_marginStart="3dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/arrow_up"
                        app:tint="@color/green_200"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    
                </RelativeLayout>
                
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardElevation="0dp"
                app:cardCornerRadius="7dp"
                app:cardBackgroundColor="@color/yellow_200">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/yellow1"
                        android:text="8.200"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/yellow2"
                        android:layout_below="@id/yellow1"
                        android:layout_marginTop="3dp"
                        android:text="[17%]"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/yellow3"
                        android:layout_below="@id/yellow2"
                        android:layout_marginTop="3dp"
                        android:text="-6%"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_below="@id/yellow2"
                        android:layout_marginStart="3dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/arrow_down"
                        app:tint="@color/green_200"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="7dp"
                app:cardBackgroundColor="@color/red">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/red1"
                        android:text="3.500"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/red2"
                        android:layout_below="@id/red1"
                        android:layout_marginTop="3dp"
                        android:text="[7%]"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/red3"
                        android:layout_below="@id/red2"
                        android:layout_marginTop="3dp"
                        android:text="-13%"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_below="@id/red2"
                        android:layout_marginStart="3dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/arrow_down"
                        app:tint="@color/green_200"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/box2"
            android:layout_below="@id/box1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="7dp"
                app:cardBackgroundColor="@color/gray_200">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/gray1"
                        android:text="300"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/gray2"
                        android:layout_below="@id/gray1"
                        android:layout_marginTop="3dp"
                        android:text="[1%]"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/gray3"
                        android:layout_below="@id/gray2"
                        android:layout_marginTop="3dp"
                        android:text="-25%"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_below="@id/gray2"
                        android:layout_marginStart="3dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/arrow_up"
                        app:tint="@color/red"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardElevation="0dp"
                app:cardCornerRadius="7dp"
                app:cardBackgroundColor="@color/yellow_200">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/orange1"
                        android:text="21"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/orange2"
                        android:layout_below="@id/orange1"
                        android:layout_marginTop="3dp"
                        android:text="[0%]"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/orange3"
                        android:layout_below="@id/orange2"
                        android:layout_marginTop="3dp"
                        android:text="-30%"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_below="@id/orange2"
                        android:layout_marginStart="3dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/arrow_down"
                        app:tint="@color/green_200"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="7dp"
                app:cardBackgroundColor="@color/black_100">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/black1"
                        android:text="300"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/black2"
                        android:layout_below="@id/black1"
                        android:layout_marginTop="3dp"
                        android:text="[1%]"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/black3"
                        android:layout_below="@id/black2"
                        android:layout_marginTop="3dp"
                        android:text="-77%"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_below="@id/black2"
                        android:layout_marginStart="3dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/arrow_down"
                        app:tint="@color/green_200"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>