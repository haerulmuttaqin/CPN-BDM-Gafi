<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="5dp"
    app:strokeWidth="0.5dp"
    app:strokeColor="@color/gray_050">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/soVsDoLabel"
            android:text="Sales Order VS Delivery Order (IDR)"
            android:textColor="@color/black"
            android:fontFamily="@font/bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/soVsDoChart"
            android:layout_below="@id/soVsDoLabel"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="130dp"/>

        <TextView
            android:id="@+id/soVsDoPercentText"
            android:layout_below="@id/soVsDoLabel"
            android:textSize="21sp"
            android:text="45%"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/soVsDoFromUntilText"
            android:layout_below="@id/soVsDoPercentText"
            android:textSize="9sp"
            android:text="450/1000"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/soVsDoChart1"
            android:layout_below="@id/soVsDoChart"
            android:layout_marginStart="10dp"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/soVsDoChart2"
            android:layout_below="@id/soVsDoChart"
            android:layout_marginStart="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/soVsDoChart3"
            android:layout_below="@id/soVsDoChart"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>